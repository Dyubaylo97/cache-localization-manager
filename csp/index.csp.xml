<?xml version="1.0" encoding="UTF-8"?>
<Export generator="Cache" version="25">
<CSP name="index.csp" application="/csp/clm/" default="1"><![CDATA[
<!DOCTYPE html>

<html lang="en-US">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

	<script src="./libs/js/jquery.min.js"></script>
	<script src="./libs/js/angular.min.js"></script>	

	<script src="./libs/js/smart-table.min.js"></script>
	<script src="./libs/js/semantic.min.js"></script>
	<script src="./libs/js/angular-sanitize.min.js"></script>
	<script src="./libs/js/angular-ui-notification.min.js"></script>

	<link rel="stylesheet" href="./libs/css/angular-ui-notification.min.css">
	<link rel="stylesheet" type="text/css" href="./libs/css/semantic.min.css">
	<link rel="stylesheet" type="text/css" href="./libs/css/myStyles.css">

	<script src="./libs/js/loading-bar.js"></script>
	<link rel="stylesheet" type="text/css" href="./libs/css/loading-bar.css">

	<script src="./myApp.js"></script>
	<script src="./myCtrl.js"></script>


</head>

<body ng-controller="myCtrl" ng-app="myApp" class="ng-scope">

<!-- <csp:text textid="277711497" domain="clm" language="ru">Spellcheck</csp:text> -->
	<div notifications-bar class="notifications" style="width: 50%;"></div notifications-bar>

	<div class="ui internally grid">
		<div class="row">
			<div class="three wide column">
				<div class="ui vertical fluid buttons"
					style="margin-left: 2%">
					<button class="ui large purple button">Domains:</button>
					<button class="ui large yellow button" 
							ng-repeat="(domain, languages) in domains"
							ng-click="domainClicked(domain)">{{domain}}</button>
				</div>
			</div>
			<div class="ten wide column">
			<div class="row">

				<div class="ui simple dropdown purple button left floated">
					Current Namespace : {{currentNamespace}}
					<i class="dropdown icon"></i>
					<div class="menu">
						<div class="item ng-binding ng-scope" 
						ng-repeat="namespace in namespaces" 
						ng-click="changeNamespace(namespace)">{{namespace}}</div>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="ui buttons right floated">
					<button ng-class="isTwoTables ? 'ui yellow button' :'ui purple button'"
						ng-click="oneTableClicked()">One Table</button>
					<div class="or"></div>
					<button ng-class="isTwoTables ? 'ui purple button' :'ui yellow button'"
						ng-click="twoTablesClicked()">Two Tables</button>
				</div>
			</div>

				

				<div class="ui equal width grid">

					<div class="column">
						<main-table></main-table>

					</div>
					<div ng-if="isTwoTables" class="column">
						<main-table></main-table>

					</div>
				</div>
					

			</div>


			<div class="three wide column">
				<div class="ui vertical buttons"
					style="margin-right: 2%">
					<button class="ui large purple button" ng-click="getMistakes()" ng-disabled="isTwoTables"><p>Spellcheck</p><span ng-if="isTwoTables" style="color: red; font-size: 14px;">(Please use only with one table)</span></button>
					<button class="ui large yellow button" ng-click="addNewLocalizationClicked()">Add New Localization</button>
					<button class="ui large purple button" ng-click="exportMessages()">Export Current Messages</button>
					<button class="ui large yellow button" ng-click="importMessagesClicked()">Import Current Messages</button>
					<div class="ui divider"></div>
					<button class="ui large red button" ng-click="deleteThisLanguage()">Delete {{yandexLanguagesList[selectedLanguage]}} from {{domain}} domain</button>
				</div>
			</div>

		</div>
	</div>

<!-- Add New Localization Modal  -->
<div class="ui modal addNewLocalization">
	<div class="header">
		Adding a new localization
	</div>
	<div class="content">
		<div class="ui header ng-binding">Please choose the language to add to PMML domain.</div>

		<select class="ui dropdown ng-pristine ng-untouched ng-valid" ng-model="newLanguage">
			<option ng-repeat="(locale, language) in yandexLanguagesList" ng-value="locale">{{yandexLanguagesList[locale]}}</option>
		</select>
	</div>
	<div class="actions">
		<div class="ui black deny button">Cancel.</div>
		<div class="ui positive right icon button" ng-click="postAddNewLocalization(domain, selectedLanguage, newLanguage);">Add.</div>
	</div>
</div>
<!-- Add New Localization Modal  -->

<!-- import Domain Modal  -->
<div class="ui modal importMessages">

	<div class="header">
		Importing Messages
	</div>

	<div class="content">
		<div class="ui header">Please select file that you want to import(Should be XML file.)</div>
		<div class="ui fluid icon input">
			<input type="file" file-model="myFile">
		</div>
	</div>

	<div class="actions">
		<div class="ui black deny button">Cancel.</div>
		<div class="ui positive right icon button" ng-click="uploadFile();">Import.</div>
	</div>

</div>
<!-- import Domain Modal  -->

</body></html>
]]></CSP>
</Export>
